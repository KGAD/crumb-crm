@model CrumbCRM.QuoteItem
@{
    ViewBag.Title = "Add a Quote Item";
}

<h1>Add quote<a href="/quote" class="btn-back">Back</a></h1>
<div class="width-wide left">
@using (Html.BeginForm("AddItem", "Quotes", FormMethod.Post, new { @class = "box"}))
{
    @Html.Hidden("QuoteID", Model.QuoteID)
    <div class="form-row">
        <label>Item Title</label>
        @Html.TextBoxFor(j => j.Title, null, new { @class = "input-large", placeholder = "Item Title" });
    </div>
    <div class="actions">
        <input type="submit" value="Add Quote Item" class="btn btn-primary"  />
    </div>

}
		</div> <!-- /content-right -->


<div class="width-side right no-mobile">
    <div class="box no-mobile dash-tasks">
        <h4>Tasks</h4>
        @{Html.RenderAction("DisplaySideTasks", "Task", new { });}
    </div>
</div>
<!-- /width-side -->